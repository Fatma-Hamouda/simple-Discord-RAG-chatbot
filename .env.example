# Discord RAG Bot - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# DISCORD BOT CONFIGURATION
# ============================================================================
# Get your bot token from: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here


# Bot command prefix (default: !ask)
BOT_PREFIX=!ask

# ============================================================================
# BACKEND API CONFIGURATION
# ============================================================================
# URL where your Flask backend is running
BACKEND_URL=http://localhost:5000

# Flask settings
PORT=5000
DEBUG=True

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
# Choose your LLM: 'azure' or 'ollama'
LLM_TYPE=ollama

# --- Azure OpenAI (DeepSeek) Configuration ---
# Get free credits: https://azure.microsoft.com/en-us/pricing/purchase-options/azure-account
AZURE_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_API_KEY=your_azure_api_key_here
AZURE_DEPLOYMENT=deepseek-deployment-name

# --- Ollama Configuration (Local LLM) ---
# Download from: https://ollama.ai
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ============================================================================
# OPTIONAL: Advanced Configuration
# ============================================================================
# Embedding model (default: all-MiniLM-L6-v2)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Vector search top-k results (default: 3)
TOP_K=3

# Chunk size for documents
CHUNK_SIZE=800

# Chunk overlap 
CHUNK_OVERLAP=200
